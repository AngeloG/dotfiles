<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox">
  <item label="Terminal">
    <action name="Execute"><execute>x-terminal-emulator</execute></action>
  </item>
  <menu id="Web" label="Web">
    <item label="Firefox">
      <action name="Execute"><execute>firefox</execute></action>
    </item>
    <item label="Chromium">
      <action name="Execute"><execute>chromium-browser</execute></action>
    </item>
  </menu>
  <menu id="Dev" label="Development">
    <item label="Qt Creator">
      <action name="Execute"><execute>~/apps/qtcreator/bin/qtcreator</execute></action>
    </item>
    <item label="Sublime Text">
      <action name="Execute"><execute>/opt/sublime_text/sublime_text</execute></action>
    </item>
  </menu>
  <separator />
  <menu id="ObMenu" label="Openbox">
    <item label="ObConf">
      <action name="Execute"><execute>obconf</execute></action>
    </item>
    <item label="Reconfigure">
      <action name="Reconfigure" />
    </item>
    <item label="Restart">
      <action name="Restart" />
    </item>
  </menu>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
